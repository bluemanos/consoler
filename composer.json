{
    "name": "bluemanos/consoler",
    "description": "The PHP micro-framework for Command line tools based on the Symfony2 Components",
    "keywords": [
        "microframework",
        "cli",
        "console"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Szymon Bluma",
            "email": "szbluma@gmail.com"
        }
    ],
    "require": {
        "php": "~5.4",
        "pimple/pimple": "^3.0",
        "symfony/console": "2.7.*",
        "symfony/event-dispatcher": "2.7.*",
        "doctrine/dbal": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App",
            "Consoler\\": "src/Consoler"
        }
    }
}
